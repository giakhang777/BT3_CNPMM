<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Edit User</title>
  <style>
    body { font-family: sans-serif; margin: 24px; }
    nav a { margin-right: 12px; text-decoration: none; color: #06c; }
    h1 { margin: 12px 0 16px; }
    form { max-width: 640px; display: grid; grid-template-columns: 1fr 1fr; gap: 10px; }
    form input, form select { padding: 8px; }
    form .full { grid-column: 1 / -1; }
    button { padding: 10px 14px; }
    .container { max-width: 980px; margin: 0 auto; }
  </style>
</head>
<body>
  <div class="container">
    <nav>
      <a href="/home">Home</a>
      <a href="/crud">Create</a>
      <a href="/get-crud">List Users</a>
    </nav>

    <h1>Edit User</h1>

    <% const id = (data && (data.id || data._id)) || ''; %>
    <form action="/put-crud" method="post">
      <input type="hidden" name="id" value="<%= id %>" />

      <input name="email" type="email" placeholder="Email" value="<%= data?.email || '' %>" class="full" />
      <input name="firstName" placeholder="First Name" value="<%= data?.firstName || '' %>" />
      <input name="lastName"  placeholder="Last Name"  value="<%= data?.lastName  || '' %>" />
      <input name="phoneNumber" placeholder="Phone Number" value="<%= data?.phoneNumber || '' %>" />
      <input name="address"     placeholder="Address"      value="<%= data?.address || '' %>" class="full" />

      <label>
        Gender
        <select name="gender">
          <option value="false" <%= data?.gender ? '' : 'selected' %>>Female</option>
          <option value="true"  <%= data?.gender ? 'selected' : '' %>>Male</option>
        </select>
      </label>

      <input name="roleId"     placeholder="Role ID"     value="<%= data?.roleId || '' %>" />
      <input name="positionId" placeholder="Position ID" value="<%= data?.positionId || '' %>" />
      <input name="image"      placeholder="Image URL"   value="<%= data?.image || '' %>" class="full" />

      <div class="full">
        <button type="submit">Update</button>
        <a href="/get-crud" style="margin-left:8px;">Back to list</a>
      </div>
    </form>
  </div>
</body>
</html>
